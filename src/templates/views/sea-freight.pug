extends ../layout/base
prepend title 
    title=view.pageTitle

block content
  
    mixin mapImage(url, alt)
        img(src=url alt=alt).mh4.mv2.shadow-6
  
    include ../partials/header
    
    .template-content.pa3.pt4.pa5-ns.f3-ns
        +subheading(view.headline)
      
        section#sea-freight_top.flex.flex-wrap.pt3
    
            #sea-freight_top_col-1.pl5-ns.w-50-ns
            
                #sea-freight_list-1
                    +markdownContent("sea-freight_body1", view.body1)
                
            #sea-freight_top_col-2.pl5-ns.w-50-ns
                    
                #sea-freight_list-2
                    +markdownContent("sea-freight_body2", view.body2)
    
    
    #map-images.flex.flex-column.flex-row-ns.justify-center.justify-around-ns.bg-gray.w-100.pv2
        
        +mapImage('./images/sea-map-1.png', 'sea map of Europe, Asia and Africa')
        +mapImage('./images/sea-map-2.png', 'sea map of Europe')
        +mapImage('./images/sea-map-3.png', 'sea map of Europe, Africa and North America')

    section#sea-freight-bottom.pa4
      
        +ctaButton('./contact', view.cta)
        +linkToHome()
